{
    "manifest_version": 2,
    "content_security_policy": "script-src 'self'; object-src 'self';",
    "name": "Steam Sheriff",
    "description": "Checks URLs visited by user to help prevent Steam phishing attacks",
    "author": "Zack Allen",
    "version": "0.3",
    "background": {
        "scripts": [ "js/background.js", "js/jdist.js", "js/jquery-2.1.4.min.js", "js/jquery-ui.js" , "js/acc.js" ]
    },
    "permissions": [
        "webRequest",
        "<all_urls>",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "js/*.js",
        "warning.js",
        "warning.html"
    ],
    "icons" : {
        "16" : "assets/16_logo.png",
        "48" : "assets/48_logo.png",
        "128" : "assets/128_logo.png"
    }
}
